<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:background="#111111"
    tools:context=".MainActivity">

    <!-- 第1行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView style="@style/GridCellStyle" android:text="One,One" />
        <TextView style="@style/GridCellStyle" android:text="One,Two" />
        <TextView style="@style/GridCellStyle" android:text="One,Three" />
        <TextView style="@style/GridCellStyle" android:text="One,Four" />
    </LinearLayout>

    <!-- 第2行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView style="@style/GridCellStyle" android:text="Two,One" />
        <TextView style="@style/GridCellStyle" android:text="Two,Two" />
        <TextView style="@style/GridCellStyle" android:text="Two,Three" />
        <TextView style="@style/GridCellStyle" android:text="Two,Four" />
    </LinearLayout>

    <!-- 第3行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView style="@style/GridCellStyle" android:text="Three,One" />
        <TextView style="@style/GridCellStyle" android:text="Three,Two" />
        <TextView style="@style/GridCellStyle" android:text="Three,Three" />
        <TextView style="@style/GridCellStyle" android:text="Three,Four" />
    </LinearLayout>

    <!-- 第4行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView style="@style/GridCellStyle" android:text="Four,One" />
        <TextView style="@style/GridCellStyle" android:text="Four,Two" />
        <TextView style="@style/GridCellStyle" android:text="Four,Three" />
        <TextView style="@style/GridCellStyle" android:text="Four,Four" />
    </LinearLayout>

</LinearLayout>
