<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#222222"
    android:stretchColumns="1"
    android:padding="4dp">

    <!-- 标题栏 -->
    <TableRow
        android:background="#444444"
        android:padding="6dp">
        <TextView
            android:text="Hello TableLayout"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_span="2" />
    </TableRow>

    <!-- 第一行 -->
    <TableRow>
        <TextView
            android:text="Open..."
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_weight="1"/>
        <TextView
            android:text="Ctrl-O"
            android:textColor="#AAAAAA"
            android:gravity="end"
            android:padding="8dp"/>
    </TableRow>

    <!-- 第二行 -->
    <TableRow>
        <TextView
            android:text="Save..."
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_weight="1"/>
        <TextView
            android:text="Ctrl-S"
            android:textColor="#AAAAAA"
            android:gravity="end"
            android:padding="8dp"/>
    </TableRow>

    <!-- 第三行 -->
    <TableRow>
        <TextView
            android:text="Save As..."
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_weight="1"/>
        <TextView
            android:text="Ctrl-Shift-S"
            android:textColor="#AAAAAA"
            android:gravity="end"
            android:padding="8dp"/>
    </TableRow>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#777777"
        android:layout_marginVertical="4dp" />

    <!-- 第四行 -->
    <TableRow>
        <TextView
            android:text="X Import..."
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_weight="1"/>
    </TableRow>

    <!-- 第五行 -->
    <TableRow>
        <TextView
            android:text="X Export..."
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_weight="1"/>
        <TextView
            android:text="Ctrl-E"
            android:textColor="#AAAAAA"
            android:gravity="end"
            android:padding="8dp"/>
    </TableRow>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#777777"
        android:layout_marginVertical="4dp" />

    <!-- 第六行 -->
    <TableRow>
        <TextView
            android:text="Quit"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_weight="1"/>
    </TableRow>

</TableLayout>
