<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 左边图片 -->
    <ImageView
        android:id="@+id/image1"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:src="@drawable/space_station_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Space Stations"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/image1"
        app:layout_constraintStart_toStartOf="@id/image1"
        app:layout_constraintEnd_toEndOf="@id/image1"
        android:layout_marginTop="4dp"
        android:gravity="center"/>

    <!-- 中间图片 -->
    <ImageView
        android:id="@+id/image2"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:src="@drawable/rocket_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/image1"
        app:layout_constraintEnd_toStartOf="@id/image3"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flights"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/image2"
        app:layout_constraintStart_toStartOf="@id/image2"
        app:layout_constraintEnd_toEndOf="@id/image2"
        android:layout_marginTop="4dp"
        android:gravity="center"/>

    <!-- 右边图片 -->
    <ImageView
        android:id="@+id/image3"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:src="@drawable/rover_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rovers"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/image3"
        app:layout_constraintStart_toStartOf="@id/image3"
        app:layout_constraintEnd_toEndOf="@id/image3"
        android:layout_marginTop="4dp"
        android:gravity="center"/>

    <!-- 左侧绿色按钮 DCA -->
    <Button
        android:id="@+id/btndca"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#2E7D32"
        android:text="DCA"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnmars"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintHorizontal_weight="1" />

    <!-- 右侧绿色按钮 MARS -->
    <Button
        android:id="@+id/btnmars"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#2E7D32"
        android:text="MARS"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/btndca"
        app:layout_constraintStart_toEndOf="@id/btndca"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_weight="1" />

    <!-- 中间的双向箭头 -->
    <ImageView
        android:id="@+id/imageexchange"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/double_arrows"
        app:layout_constraintTop_toTopOf="@id/btndca"
        app:layout_constraintBottom_toBottomOf="@id/btndca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- One Way 标签 -->
    <TextView
        android:id="@+id/labelOneWay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="One Way"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="#BF360C"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/btndca"
        app:layout_constraintStart_toStartOf="@id/btndca"
        android:layout_marginTop="32dp" />

    <!-- One Way 开关 -->
    <Switch
        android:id="@+id/switchoneway"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/labelOneWay"
        app:layout_constraintBottom_toBottomOf="@id/labelOneWay"
        app:layout_constraintStart_toEndOf="@id/labelOneWay"
        android:layout_marginStart="8dp" />

    <!-- Traveller 选择 -->
    <Button
        android:id="@+id/btntraveller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Traveller"
        android:backgroundTint="#BF360C"
        android:textColor="#FFFFFF"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/labelOneWay"
        app:layout_constraintStart_toStartOf="@id/labelOneWay"
        android:layout_marginTop="16dp" />

    <!-- 中间的星球 -->

    <!-- 星球上方的火箭 -->
    <ImageView
        android:id="@+id/imageplanet"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/galaxy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.576" />

    <ImageView
        android:id="@+id/imagerocket"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/rocket_icon"
        app:layout_constraintTop_toTopOf="@id/imageplanet"
        app:layout_constraintBottom_toBottomOf="@id/imageplanet"
        app:layout_constraintEnd_toStartOf="@id/imageplanet"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btndepart"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="DEPART"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2E7D32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

